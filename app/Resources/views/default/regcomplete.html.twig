{% extends 'base.html.twig' %}

{% block header %}
	<h1>Zarejestrowałeś(aś) się prawidłowo.</h1>
	Możesz się teraz zalogować.
	<ul class="actions">
		<li><a href="#one" class="button scrolly">Zaloguj się</a></li>
	</ul>
{% endblock %}

{% block sectionOne %}
<div class="row 150%">
	<div class="6u 12u$(medium)">
		<header class="major">Zaloguj się</header>
		<form action="{{ path('login_check') }}#one" method="post">
			<label for="username">Email:</label>
			<input type="text" id="username" name="_username" />

			<label for="password">Hasło:</label>
			<input type="password" id="password" name="_password" />

			<input type="hidden" name="_target_path" value="/" />

			<button type="submit" style="margin-top:10px">Zaloguj</button>
		</form>
	</div>
</div>	
{% endblock %}